// TypeScript関連の設定ファイル
{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        // noImplicitAnyをfalseとすることで型明示エラーが出なくなる
        // 他にも「tsconfig 設定」などで調べると色々な情報が出てくる
        "noImplicitAny": false,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx"
    }
}